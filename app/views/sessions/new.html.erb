<h1>Login</h1>

<%= form_with url: login_path, local: true do |f| %>
    <div class = "field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>

    <div class = "field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>

    <div class = "field">
        <%= f.submit :"Login" %>
    </div>
<% end %>
<br>
<%= link_to 'Back', events_path %>
