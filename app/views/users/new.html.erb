<h1>Sign up</h1>

<%= form_with model: @user, url: root_path, local: true do |f| %>
    <div class = "field">
        <%= f.label :email %><br>
        <%= f.text_field :email %>
    </div>

    <div class = "field">
        <%= f.label :password %><br>
        <%= f.password_field :password %>
    </div>

    <div class = "field">
        <%= f.label :password_confirmation %><br>
        <%= f.password_field :password_confirmation %>
    </div>

    <div class = "field">
        <%= f.submit "Sign up"%>
    </div>

<% end %>
<br>
<%= link_to 'Login', login_path %>
<br>
<%= link_to 'Back', events_path %>
